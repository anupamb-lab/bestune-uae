              AED 1,246 <span class="unit">/ month</span>
            </div>
            <div class="result-summary" id="emiSummary">
              For 60 months at 3.25% interest.
            </div>
          </div>
          <div class="result-footer">
            <div class="result-tag">
              <span class="result-dot"></span>
              No hidden charges
            </div>
            <div class="result-tag">
              <span class="result-dot" style="background:#f59e0b;"></span>
              Early settlement available
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    const carPriceInput = document.getElementById("carPrice");
    const downRange = document.getElementById("downPaymentPercent");
    const downInput = document.getElementById("downPaymentPercentInput");
    const downLabel = document.getElementById("downPaymentPercentLabel");
    const downText = document.getElementById("downPaymentText");
    const tenureRange = document.getElementById("loanTenure");
    const tenureLabel = document.getElementById("tenureMonthsLabel");
    const interestInput = document.getElementById("interestRate");
    const loanAmountInput = document.getElementById("loanAmount");
    const heroBasePrice = document.getElementById("heroBasePrice");
    const heroModelName = document.getElementById("heroModelName");
    const heroModelTag = document.getElementById("heroModelTag");
    const heroFeatures = document.getElementById("heroFeatures");
    const calcSubtitle = document.getElementById("calcSubtitle");
    const calculateBtn = document.getElementById("calculateBtn");
    const emiAmount = document.getElementById("emiAmount");
    const emiSummary = document.getElementById("emiSummary");
    const modelTabs = document.querySelectorAll(".model-tab");

    // Model config using your numbers
    const MODELS = {
      LIMOUSINE: {
        label: "T90 LIMOUSINE",
        price: 79500,
        tenure: 60,
        downPercent: 20,
        tagline: "Customize your plan in seconds",
        features: [
          { icon: "‚öôÔ∏è", text: "2.0T Turbo Engine" },
          { icon: "üåÖ", text: "Panoramic Sunroof" },
          { icon: "üõ°Ô∏è", text: "Advanced Safety Suite" },
        ],
      },
      PREMIUM: {
        label: "T90 PREMIUM",
        price: 85000,
        tenure: 60,
        downPercent: 20,
        tagline: "Premium trim with flexible finance options",
        features: [
          { icon: "üí∫", text: "Leather Interior" },
          { icon: "üîä", text: "Premium Audio System" },
          { icon: "üõ°Ô∏è", text: "Advanced Safety Suite" },
        ],
      },
      FLAGO: {
        label: "T90 FLAGO",
        price: 105000,
        tenure: 60,
        downPercent: 20,
        tagline: "This is FLAGO ‚Äì flagship performance",
        features: [
          { icon: "üèÅ", text: "Flagship Performance" },
          { icon: "üöÄ", text: "Sport Tuned Package" },
          { icon: "üåå", text: "Signature Ambient Lighting" },
        ],
      },
    };

    function formatNumber(num) {
      return num.toLocaleString("en-AE", {
        maximumFractionDigits: 0,
      });
    }

    function updateLoanDetails() {
      const price = Number(carPriceInput.value) || 0;
      const downPercent = Number(downRange.value) || 0;
      const tenureMonths = Number(tenureRange.value) || 0;

      // Sync fields
      downInput.value = downPercent;
      downLabel.textContent = `${downPercent}%`;
      tenureLabel.textContent = tenureMonths;

      const downPayment = (price * downPercent) / 100;
      const loanAmount = price - downPayment;

      heroBasePrice.textContent = `AED ${formatNumber(price)}`;
      downText.textContent = `You pay AED ${formatNumber(
        Math.round(downPayment)
      )} upfront.`;
      loanAmountInput.value = formatNumber(Math.max(loanAmount, 0));

      return { price, downPayment, loanAmount, tenureMonths };
    }

    function calculateEMI() {
      const { loanAmount, tenureMonths } = updateLoanDetails();
      const annualRate = Number(interestInput.value) || 0;
      const monthlyRate = annualRate / 12 / 100;

      let emi = 0;

      if (monthlyRate === 0) {
        emi = tenureMonths > 0 ? loanAmount / tenureMonths : 0;
      } else {
        const r = monthlyRate;
        const n = tenureMonths;
        const factor = Math.pow(1 + r, n);
        emi = (loanAmount * r * factor) / (factor - 1);
      }

      emi = isFinite(emi) ? Math.round(emi) : 0;

      emiAmount.innerHTML = `AED ${formatNumber(
        emi
      )} <span class="unit">/ month</span>`;
      emiSummary.textContent = `For ${tenureMonths} months at ${annualRate.toFixed(
        2
      )}% interest.`;
    }

    // Slider gradient helper
    function updateSliderGradient(slider) {
      const min = slider.min ? Number(slider.min) : 0;
      const max = slider.max ? Number(slider.max) : 100;
      const value = slider.value ? Number(slider.value) : 0;
      const percent = ((value - min) * 100) / (max - min);
      slider.style.setProperty("--value", `${percent}%`);
    }

    // Switch model
    function setModel(modelKey) {
      const model = MODELS[modelKey];
      if (!model) return;

      // Update hero text & features
      heroModelName.textContent = model.label;
      calcSubtitle.textContent = model.tagline;

      // Features
      heroFeatures.innerHTML = "";
      model.features.forEach((f) => {
        const pill = document.createElement("div");
        pill.className = "feature-pill";
        pill.innerHTML = `<div class="icon">${f.icon}</div>${f.text}`;
        heroFeatures.appendChild(pill);
      });

      // Update form fields
      carPriceInput.value = model.price;
      downRange.value = model.downPercent;
      downInput.value = model.downPercent;
      tenureRange.value = model.tenure;

      updateSliderGradient(downRange);
      updateSliderGradient(tenureRange);

      calculateEMI();
    }

    // Event bindings
    [carPriceInput, interestInput].forEach((el) => {
      el.addEventListener("input", () => {
        updateLoanDetails();
      });
    });

    downRange.addEventListener("input", () => {
      updateLoanDetails();
      updateSliderGradient(downRange);
    });

    downInput.addEventListener("input", () => {
      let v = Number(downInput.value) || 0;
      if (v < 0) v = 0;
      if (v > 50) v = 50;
      downInput.value = v;
      downRange.value = v;
      updateLoanDetails();
      updateSliderGradient(downRange);
    });

    tenureRange.addEventListener("input", () => {
      updateLoanDetails();
      updateSliderGradient(tenureRange);
    });

    calculateBtn.addEventListener("click", (e) => {
      e.preventDefault();
      calculateEMI();
    });

    modelTabs.forEach((tab) => {
      tab.addEventListener("click", () => {
        modelTabs.forEach((t) => t.classList.remove("active"));
        tab.classList.add("active");
        const modelKey = tab.getAttribute("data-model");
        setModel(modelKey);
      });
    });

    // Initial state
    updateLoanDetails();
    updateSliderGradient(downRange);
    updateSliderGradient(tenureRange);
    calculateEMI();
  </script>
</body>
</html>
